    <script>
        const elf = document.getElementById("elf")
        const btn = document.getElementById("btn")
        let count = 0

        btn.addEventListener("click", duplicateElf)

        function duplicateElf(){

        //Limit total number of elves by using .textContent
        if (count < 100) {
            count++
            elf.textContent += "üßù" 
        }
