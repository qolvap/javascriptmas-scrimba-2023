<body>

<h2>Secret Santa Assignment</h2>
<button onclick="generateAndDisplay()">Generate Secret Santa Pairs</button>
<p id="result"></p>

<script>
  const people = ["Alice", "Bob", "Carly", "Dan", "Ed", "Ferdinand", "Ginny"];

  function generateSecretSantaPairs(arr) {
    const shuffledArr = [...arr].sort(() => Math.random() - 0.5);

    const pairs = {};
    for (let i = 0; i < arr.length; i++) {
      pairs[arr[i]] = shuffledArr[(i + 1) % arr.length];
    }

    return pairs;
  }

  function generateAndDisplay() {
    const resultElement = document.getElementById("result");
    const secretSantaPairs = generateSecretSantaPairs(people);

    // Display the result on the page
    let resultString = "Secret Santa Pairs:<br>";
    for (const person in secretSantaPairs) {
      resultString += `${person}: ${secretSantaPairs[person]}<br>`;
    }

    resultElement.innerHTML = resultString;
    console.log(secretSantaPairs);
  }
</script>

