    <main>
        <section>
            <div id="word-display"></div>
        </section>
        <section>
            <form id="guess-form">
                <label>Make your guess</label>
                <div class="form-inner">
                    <input type="text" placeholder="gifts" id="user-input">
                    <button type="submit"><img src="send.svg" class="btn-submit"></button>
                </div>
            </form>
